<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent background for shadow -->
            <corners android:radius="4dp"/>
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp"/>
            <size android:width="match_parent" android:height="match_parent"/>
            <elevation android:shadowColor="#80000000" android:shadowRadius="4dp"/>
        </shape>
    </item>
    <!-- Actual Box Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color of the box -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
